modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Chrome Extension"

[[workflows.workflow]]
name = "Chrome Extension"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo 'Chrome extension development mode enabled' && tail -f /dev/null"

[deployment]
run = ["sh", "-c", "echo 'Chrome extension development mode enabled' && tail -f /dev/null"]
