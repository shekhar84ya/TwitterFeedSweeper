{
  "manifest_version": 3,
  "name": "Twitter Feed Navigator",
  "version": "1.0",
  "description": "Enhanced Twitter feed navigation with post caching and seamless controls",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.twitter.com/*",
    "https://*.x.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "https://*.twitter.com/*",
      "https://*.x.com/*"
    ],
    "js": ["content.js"],
    "css": ["styles.css"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.svg"
  },
  "icons": {
    "48": "icon.svg",
    "128": "icon.svg"
  }
}